@page
@model Event.Pages.MyEventsModel

@{
    ViewData["Title"] = "MyEvents";
}

<h1>MyEvents</h1>

@if (Model.ShowMessage)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" arial-label="Close">X</button>
        @Model.Message
    </div>

}

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Events[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Events[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Events[0].Place)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Events[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Events[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Events[0].SpotsAvailable)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Events)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpotsAvailable)
                    </td>
                    <td>

                        <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Delete</button>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</form>
